#!/bin/bash

# Update repo with latest from master
git_pull () {
    cd /root/deploy;
    git pull;
}

# Start Registry Server
run_registry () {
  registry serve /etc/docker/registry/config.yml 2>&1 1>/dev/null &
}

run_core () {
git_pull 2>&1 1>/dev/null
run_registry
}

run_core
clear && ./site.yml
