#!/bin/bash

# Update repo with latest from master
git_pull () {
    cd /root/koffer;
#   git checkout nightlies;
    git pull;
}

# Start Registry Server
run_registry () {
  /usr/bin/run_registry.sh
}

run_core () {
git_pull 2>&1 1>/dev/null
run_registry 2>&1 1>/dev/null
}

clear
run_core
time ./site.yml
sleep 2
bundleDu="$(du -h /root/deploy/koffer/koffer-bundle.*.tar | awk '{print $1}')"
bundlePath="$(ls /root/deploy/koffer/koffer-bundle.*.tar | sed 's/root\/deploy/tmp/')"
cat <<EOF

  Koffer Bundle Complete: ${bundleDu} ${bundlePath}

EOF
