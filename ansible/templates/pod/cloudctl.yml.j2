      name: socket-io.podman
    workingDir: /root/.ccio
  volumes:
  - hostPath:
      path: /root/.ccio
      type: Directory
    name: ccio-home
  - hostPath:
      path: /root/.ssh/authorized_keys
      type: File
    name: ccio-ssh-authorized-keys
  - hostPath:
      path: /run/podman/io.podman
      type: File
    name: socket-io.podman
