kind: Pod
metadata:
  labels:
    app: cloudctl
  name: cloudctl
spec:
  containers:
  - env:
    - name: PATH
      value: /usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
